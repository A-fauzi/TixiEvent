<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Latar Belakang Tambahan -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Warna latar belakang tambahan -->
            <padding
                android:bottom="6dp"
                android:top="6dp"
                android:right="6dp"
                android:left="6dp"/>
            <corners android:radius="8dp"/>
        </shape>

    </item>

    <!-- Latar Belakang Card -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/design_default_color_secondary" /> <!-- Warna latar belakang card -->
            <corners android:radius="8dp" /> <!-- Mengatur sudut bulat pada card -->
            <padding
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"
                android:bottom="4dp"/>
        </shape>
    </item>

    <!-- Ikon -->
    <item
        android:drawable="@drawable/icon_maker_example"
        android:gravity="center"
        android:width="25dp"
        android:height="25dp">
    </item>

</layer-list>
